<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/dialog_preset_title"
    style="@style/TextAppearance.Material3.HeadlineMedium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_150"
    android:text="@string/preset"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/dialog_preset_title_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_150"
    android:layout_marginTop="@dimen/spacing_150"
    android:layout_marginEnd="@dimen/spacing_150"
    android:layout_marginBottom="@dimen/spacing_150"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/dialog_preset_title">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/dialog_preset_title_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/name"/>

  </com.google.android.material.textfield.TextInputLayout>

  <Button
    android:id="@+id/dialog_preset_title_save_button"
    style="@style/Widget.Material3.Button.UnelevatedButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_150"
    android:text="@string/save"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/dialog_preset_title_container"/>

  <Button
    android:id="@+id/dialog_preset_title_cancel_button"
    style="@style/Widget.Material3.Button.TextButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_150"
    android:text="@string/cancel"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/dialog_preset_title_save_button"
    app:layout_constraintTop_toBottomOf="@id/dialog_preset_title_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>
