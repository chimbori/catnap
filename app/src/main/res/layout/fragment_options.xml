<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_50"
    android:layout_marginTop="@dimen/spacing_300"
    android:layout_marginEnd="@dimen/spacing_100"
    android:orientation="vertical">

    <TextView
      style="@style/TextAppearance.Material3.HeadlineMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_100"
      android:layout_marginTop="@dimen/spacing_400"
      android:text="@string/options"/>

    <TextView
      style="@style/CatNap.OptionsCategory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_400"
      android:text="@string/amplitude_wave"/>

    <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_400"
      android:layout_marginTop="@dimen/spacing_200"
      android:layout_marginBottom="@dimen/spacing_200">

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="@dimen/spacing_300"
          android:layout_height="@dimen/spacing_300"
          android:layout_gravity="center_vertical"
          android:src="@drawable/amplitude"/>

        <SeekBar
          android:id="@+id/fragment_options_minimum_volume_seekbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"/>

        <TextView
          android:id="@+id/fragment_options_minimum_volume_text"
          style="@style/TextAppearance.Material3.BodyLarge"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical|center_horizontal"
          android:text="100%"/>
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="@dimen/spacing_300"
          android:layout_height="@dimen/spacing_300"
          android:layout_gravity="center_vertical"
          android:src="@drawable/frequency"/>

        <SeekBar
          android:id="@+id/fragment_options_period_seekbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:max="53"/>

        <TextView
          android:id="@+id/fragment_options_period_text"
          style="@style/TextAppearance.Material3.BodyLarge"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical|center_horizontal"
          android:text="60s"/>
      </TableRow>
    </TableLayout>

    <TextView
      style="@style/CatNap.OptionsCategory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_400"
      android:text="@string/advanced_options"/>

    <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/fragment_options_auto_play_checkbox"
      style="@style/TextAppearance.Material3.BodyLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_400"
      android:paddingTop="@dimen/spacing_100"
      android:paddingBottom="@dimen/spacing_100"
      android:text="@string/auto_play_on_open"/>

    <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/fragment_options_ignore_audio_focus_checkbox"
      style="@style/TextAppearance.Material3.BodyLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_400"
      android:paddingTop="@dimen/spacing_100"
      android:paddingBottom="@dimen/spacing_100"
      android:text="@string/ignore_audio_focus"/>

    <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/fragment_options_volume_limit_checkbox"
      style="@style/TextAppearance.Material3.BodyLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_400"
      android:paddingTop="@dimen/spacing_100"
      android:paddingBottom="@dimen/spacing_100"
      android:text="@string/reduce_volume"/>

    <SeekBar
      android:id="@+id/fragment_options_volume_limit_seekbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_400"
      android:paddingTop="@dimen/spacing_100"
      android:paddingBottom="@dimen/spacing_100"/>
  </LinearLayout>

</ScrollView>
